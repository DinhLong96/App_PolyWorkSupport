<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginTop="5dp"
    android:id="@+id/carview"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@drawable/bober_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.237">

        <LinearLayout
            android:background="#72CCCCCC"
            android:id="@+id/Linear_tabbaiviet"
            android:padding="6dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:padding="1dp">
                    <LinearLayout
                        android:padding="2dp"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <com.makeramen.roundedimageview.RoundedImageView
                            android:id="@+id/imgBaiViet"
                            android:src="@drawable/b"
                            app:riv_corner_radius="10dp"
                            android:scaleType="centerCrop"
                            android:layout_width="80dp"
                            android:layout_height="80dp">
                        </com.makeramen.roundedimageview.RoundedImageView>
                    </LinearLayout>

                </LinearLayout>
                <TextView
                    android:id="@+id/itemTenTieuDe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/allerta"
                    android:text="Nhân Viên Kinh Doanh - Tư Vấn Bán Hàng - Sales (Thu Nhập Lên Tới 15 Triệu/Tháng)"
                    android:textColor="@color/purple_500"
                    android:textSize="18dp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/itemMucLuong"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/allerta"
                        android:text="Luong:"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:textSize="14dp"
                        />
                    <TextView

                        android:layout_marginLeft="2dp"
                        android:id="@+id/itemHinhThuc"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/allerta"
                        android:text="Hinh Thuc:"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:textSize="14dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/itemSoLuong"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/allerta"
                        android:text="So Luong:"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:textSize="14dp"
                        />
                    <TextView
                        android:layout_marginLeft="1dp"
                        android:id="@+id/itemCapBac"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/allerta"
                        android:text="Cap Bac:"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:textSize="14dp"
                        />
                </LinearLayout>



            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
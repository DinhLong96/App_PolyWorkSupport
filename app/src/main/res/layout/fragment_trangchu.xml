<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.app_supportpolywork.Fragment.Trangchu_Fragment">
    <RelativeLayout
        android:id="@+id/deltaRelativeMenu"
        android:padding="5dp"
        android:layout_margin="2dp"
        android:background="@drawable/bober_4"
        android:layout_alignParentStart="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/txtPoly"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo"
            android:text="PolyWork"
            android:textAlignment="center"
            android:textColor="#FF9100"
            android:textSize="18sp"
            android:textStyle="bold"
            />
        <ImageView
            android:layout_toRightOf="@+id/txtPoly"
            android:layout_marginLeft="3dp"
            android:id="@+id/imageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/logo_bee"
            />


        <ImageView
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:id="@+id/img3"
            android:src="@drawable/ic_baseline_notifications_active_24"
            android:layout_width="30dp"
            android:layout_height="30dp">
        </ImageView>
    </RelativeLayout>
    <ScrollView
        android:layout_below="@+id/deltaRelativeMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:paddingBottom="40dp"
                android:background="@drawable/bober_7"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="500dp">
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="24dp"
                    android:text=" Về Chúng tôi "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
                <LinearLayout
                    android:layout_margin="10dp"
                    android:orientation="vertical"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content">

                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                </LinearLayout>

                <!--                <ImageView-->
                <!--                    android:id="@+id/imgMap"-->
                <!--                    android:src="@drawable/maaps"-->
                <!--                    android:layout_width="wrap_content"-->
                <!--                    android:layout_height="100dp"></ImageView>-->
            </LinearLayout>
            <LinearLayout
                android:paddingBottom="40dp"
                android:background="@drawable/bober_7"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="40dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="24dp"
                    android:text="Chúng tôi sãn sàng giúp đỡ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
                <LinearLayout
                    android:layout_margin="10dp"
                    android:orientation="vertical"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Truy cập Trung tâm trợ giúp để tìm được câu trả lời cho những câu hỏi phổ biến hoặc liên hệ trực tiếp với chúng tôi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <android.widget.Button
                        android:textStyle="bold"
                        android:padding="10dp"
                        android:background="@drawable/custom_btn_2"
                        android:id="@+id/btnLienHe"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:text="Liên hệ hỗ trợ"
                        android:textColor="#FF9100"
                        />
                    <android.widget.Button
                        android:textStyle="bold"
                        android:layout_marginLeft="20dp"
                        android:padding="10dp"
                        android:background="@drawable/custom_btn_2"
                        android:id="@+id/btnHoTro"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:text="Trung tâm hỗ trợ"
                        android:textColor="#FF9100"
                        />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/facebook_app_logo"
                    android:layout_width="30dp"
                    android:layout_height="30dp">
                </ImageView>
                <TextView
                    android:layout_marginLeft="3dp"
                    android:textStyle="bold"
                    android:gravity="center|start"
                    android:text="https://www.facebook.com/"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <ImageView

                    android:src="@drawable/ic_baseline_location_on_24"
                    android:layout_width="30dp"
                    android:layout_height="30dp">
                </ImageView>
                <TextView
                    android:layout_marginLeft="3dp"
                    android:id="@+id/txtmaps"
                    android:textStyle="bold"
                    android:gravity="center|start"
                    android:text="Tòa nhà FPT Polytechnic, Phố Trịnh Văn Bô, Nam Từ Liêm, Hà Nội."
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </TextView>
            </LinearLayout>
            <LinearLayout

                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView

                    android:src="@drawable/ic_baseline_language_24"
                    android:layout_width="30dp"
                    android:layout_height="30dp">
                </ImageView>
                <TextView
                    android:layout_marginLeft="3dp"
                    android:textStyle="bold"
                    android:gravity="center|start"
                    android:text="https://caodang.fpt.edu.vn/"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                </TextView>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>
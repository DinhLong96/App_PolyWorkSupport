<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_margin="8dp"
    android:padding="15dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:paddingBottom="20dp"
        android:padding="10dp"
        android:orientation="vertical"
        android:background="@drawable/bg_item_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView

            android:textAlignment="center"
            android:id="@+id/txtTen"
            android:textStyle="bold"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:background="#FF9100"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="Kĩ năng &amp; Kinh Nghiệm "
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

        <EditText
            android:singleLine="true"
            android:maxLines="1"
            style="@style/PrimaryLayoutEdittext"
            android:id="@+id/edTenkinang"
            android:hint="Tên Kĩ Năng"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </EditText>
        <EditText
            android:singleLine="true"
            android:maxLines="1"
            style="@style/PrimaryLayoutEdittext"
            android:id="@+id/edKinhnghiem"
            android:hint="Kinh Nhiệm"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </EditText>

        <EditText
            android:maxLines="@integer/google_play_services_version"
            style="@style/PrimaryLayoutEdittext"
            android:id="@+id/edMotathem"
            android:hint="Mô Tả Thêm"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>

</LinearLayout>
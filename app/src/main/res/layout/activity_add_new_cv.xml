<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#AEC5C5C5"
    android:layout_height="match_parent"
    tools:context=".Add_new_cv">
    <LinearLayout
        android:background="@drawable/bg9"
        android:layout_margin="1dp"
        android:padding="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_baseline_auto_fix_high_24"
                android:layout_width="40dp"
                android:layout_height="40dp">
            </ImageView>
            <TextView
                android:layout_marginLeft="8dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:fontFamily="@font/baloo"
                android:textColor="#95000000"
                android:textSize="24dp"
                android:text="Dien Thong Tin Phu Hop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/bober_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout

                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:fontFamily="@font/alatsi"
                    android:textColor="#050505"
                    android:textSize="24dp"
                    android:text="personalInfor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
                <ImageButton
                    android:layout_alignParentEnd="true"
                    android:id="@+id/btnAddPersonall"
                    android:background="@drawable/custom_btn"
                    android:src="@drawable/ic_baseline_add_24"
                    android:layout_width="40dp"
                    android:layout_height="40dp">

                </ImageButton
                    >
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:fontFamily="@font/alatsi"
                    android:textColor="#050505"
                    android:textSize="24dp"
                    android:text="education"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
                <ImageButton
                    android:layout_alignParentEnd="true"
                    android:id="@+id/btnAddeducation"
                    android:background="@drawable/custom_btn"
                    android:src="@drawable/ic_baseline_add_24"
                    android:layout_width="40dp"
                    android:layout_height="40dp">
                </ImageButton
                    >
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:fontFamily="@font/alatsi"
                    android:textColor="#050505"
                    android:textSize="24dp"
                    android:text="experience"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
                <ImageButton
                    android:layout_alignParentEnd="true"
                    android:id="@+id/btnAddexperience"
                    android:background="@drawable/custom_btn"
                    android:src="@drawable/ic_baseline_add_24"
                    android:layout_width="40dp"
                    android:layout_height="40dp">

                </ImageButton
                    >
            </RelativeLayout>
            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:fontFamily="@font/alatsi"
                    android:textColor="#050505"
                    android:textSize="24dp"
                    android:text="skill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
                <ImageButton
                    android:layout_alignParentEnd="true"
                    android:id="@+id/btnAddskill"
                    android:background="@drawable/custom_btn"
                    android:src="@drawable/ic_baseline_add_24"
                    android:layout_width="40dp"
                    android:layout_height="40dp">

                </ImageButton
                    >
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>